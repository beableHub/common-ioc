    <bean class="org.beable.common.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"/>

    <bean id="userDaoBeforeAdvice" class="org.beable.common.ioc.advice.UserDaoBeforeAdvice"/>

    <bean id="methodBeforeAdviceInterceptor" class="org.beable.common.aop.framework.adapter.MethodBeforeAdviceInterceptor">
        <property name="advice" ref="userDaoBeforeAdvice"/>
